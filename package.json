{
  "name": "jstdd_bitcoin_cli",
  "version": "1.0.0",
  "description": "A CLI to convert bitcoin for any currency provided as part of JSTDD course.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf lib",
    "bbuild": "./node_modules/.bin/babel --out-dir bin src",
    "build": "npm run clear && npm run bbuild",
    "watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint /src*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "server": "./node_modules/.bin/webpack-dev-server --inline --open",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "files": [
    "src"
  ],
  "bin": {
    "btcConverter": "src/main.js"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": false,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": "tests/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfdo20/lfdo_bitcoin_cli.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library",
    "lib"
  ],
  "author": "Leandro Fernandes lfdo <lfdo20@gmail.com> (https://lfdo20.github.io/lfdo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfdo20/lfdo_bitcoin_cli/issues"
  },
  "homepage": "https://github.com/lfdo20/lfdo_bitcoin_cli#readme",
  "dependencies": {
    "commander": "^2.14.1",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "mocha": "^5.0.0",
    "nock": "^9.1.6",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  }
}
